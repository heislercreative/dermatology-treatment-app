<% if Helpers.current_user(session).id == @patient.provider_id %>
  <h2><%= @patient.name %></h2>

  <br>

  <form method="post" action="/patients/<%= @patient.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label>Name: </label>
    <input type="text" name="patient[name]" value="<%= @patient.name %>">

    <br><br>

    <label>Date of Birth: </label>
    <input type="text" name="patient[dob]" value="<%= @patient.dob %>">

    <br><br>

    <label>Phone Number: </label>
    <input type="text" name="patient[phone]" value="<%= @patient.phone %>">

    <br><br>

    <input type="submit" value="Update Patient">
  </form>
<% else %>
  <%= redirect to '/providers/home' %>
<% end %>
